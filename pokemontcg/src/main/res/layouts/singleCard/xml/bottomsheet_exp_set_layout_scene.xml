<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@+id/next"
        app:duration="1000"
        android:id="@+id/forward">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorSide="left" />
    </Transition>

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/previous"
        android:id="@+id/backward">
        <OnSwipe
            app:dragDirection="dragRight"
            app:touchAnchorSide="right" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageViewCloseRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationX="150dp" />
        <Constraint
            android:id="@+id/imageViewCloseLeft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationX="-150dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">
        <Constraint
            android:id="@+id/imageViewCloseRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="1"
            android:scaleY="1"
            android:translationX="0dp" />
        <Constraint
            android:id="@+id/imageViewCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationX="-150dp" />
        <Constraint
            android:id="@+id/imageViewCloseLeft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationX="-300dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/previous">
        <Constraint
            android:id="@+id/imageViewCloseRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationX="300dp" />
        <Constraint
            android:id="@+id/imageViewCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationX="150dp" />
        <Constraint
            android:id="@+id/imageViewCloseLeft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/carrousel_set_img_view_height"
            android:alpha="0.2"
            android:scaleX="1"
            android:scaleY="1"
            android:translationX="0dp" />
    </ConstraintSet>

</MotionScene>
