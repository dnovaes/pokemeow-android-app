<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/expansion_set_motion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutDescription="@xml/bottomsheet_exp_set_layout_scene">

                <ImageView
                    android:id="@+id/imageViewCloseLeft"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/carrousel_set_img_view_height"
                    android:alpha="0.2" />

                <ImageView
                    android:id="@+id/imageViewCloseRight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/carrousel_set_img_view_height"
                    android:alpha="0.2" />

                <ImageView
                    android:id="@+id/imageViewCenter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/carrousel_set_img_view_height"
                    android:paddingHorizontal="15dp"/>

                <androidx.constraintlayout.helper.widget.Carousel
                    android:id="@+id/bsheet_expset_carousel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:carousel_forwardTransition="@id/forward"
                    app:carousel_backwardTransition="@id/backward"
                    app:carousel_previousState="@id/previous"
                    app:carousel_nextState="@id/next"
                    app:carousel_infinite="true"
                    app:carousel_firstView="@id/imageViewCenter"
                    app:constraint_referenced_ids="imageViewCloseLeft,imageViewCenter,imageViewCloseRight"
                    tools:ignore="MissingDefaultResource" />
            </androidx.constraintlayout.motion.widget.MotionLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            app:prefixText="#"
            app:prefixTextColor="@color/blue"
            app:endIconDrawable="@android:drawable/ic_menu_search"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="15"
                android:textAlignment="textStart"
                android:backgroundTint="@color/white"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>